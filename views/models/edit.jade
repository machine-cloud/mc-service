extends ../layout

block script

  script(src="/js/models.js")

block content

  form(method="post", action="/models/#{model._id}")

    fieldset

      legend New Model

      label(for="name") Name
      input(type="text", id="name", placeholder="SENSOR001", name="name", value=model.name)
      
      label(for="body") Body
      textarea.input-xxlarge#body(rows=15, name="body")
        = JSON.stringify({description:model.description, inputs:model.inputs, outputs:model.outputs}, null, 2)

    input(type="submit", value="Save").btn.btn-primary
